{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "artsolio/accent",
  "title": "Accent Image",
  "description": "Place a decorative accent image in a section corner. Core/Kadence compatible.",
  "category": "design",
  "icon": "format-image",
  "textdomain": "artsolio-accent",

  "editorScript": ["file:./build/index.js"],
  "style": "file:./build/style-index.css",
  "editorStyle": ["file:./build/style-index.css","file:./build/index.css"],

  "supports": { "html": false },

  "attributes": {
    "corner":        { "type": "string", "enum": ["top-left","top-right","bottom-left","bottom-right"], "default": "bottom-left" },
    "hideOnMobile":  { "type": "boolean", "default": false },
    "sizeValue":     { "type": "string", "default": "" },
    "offsetUniform": { "type": "string", "default": "" },
    "offsetX":       { "type": "string", "default": "" },
    "offsetY":       { "type": "string", "default": "" },
    "parentAnchoring": { "type": "boolean", "default": false },

    "image":         { "type": "object" },
    "url":           { "type": "string", "default": "" },

    "anchorLayer":   { "type": "number", "default": 0 }
  }
}